<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name Here"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:padding="10dp"
        android:id="@+id/my_name"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Here"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:padding="10dp"
        android:id="@+id/my_email"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Here"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:padding="10dp"
        android:id="@+id/my_mobile"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColor"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="study">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/studyicon"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study Notes"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/colorAccent">
    </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColor"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="shopping">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/shoppingicon"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="Shopping Notes"
                android:gravity="center"
                android:background="@color/colorAccent">
            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp"
        android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/textColor"
        android:elevation="4dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:onClick="reminder">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/remindericon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="Reminder Notes"
        android:gravity="center"
        android:background="@color/colorAccent">
    </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColor"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="daily">

        <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dailyicon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="Daily Notes"
        android:gravity="center"
        android:background="@color/colorAccent">
    </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColor"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="idea">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ideaicon"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="Idea Notes"
                android:gravity="center"
                android:background="@color/colorAccent">
    </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/textColor"
            android:elevation="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="travelled">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tripicon"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="Travelled Places"
                android:gravity="center"
                android:background="@color/colorAccent">
             </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/textColor"
        android:elevation="4dp"
        android:clickable="true"
        android:padding="8dp"
        android:onClick="profile">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profileicon"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="My Profile"
            android:gravity="center"
            android:background="@color/colorAccent">
        </TextView>
    </LinearLayout>
</LinearLayout>

</ScrollView>